<% layout('layouts/boilerplate') %>
<%- include('../partials/Nav') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            font-family: 'Poppins', sans-serif;
            color: #333;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            border: none;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            background: #fff;
        }
        .card-title {
            font-size: 1.8rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
            color: #4b4f56;
        }
        .form-control {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
        }
        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }
        .btn-primary {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            border: none;
            color: #fff;
            padding: 12px 20px;
            border-radius: 30px;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease-in-out;
            width: 100%;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
        }
        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <h3 class="card-title">Edit Product</h3>
                    <form action="/products/<%=foundProduct._id %>?_method=PATCH" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="name" id="naam" placeholder="Product Name" value="<%=foundProduct.name %>" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter the name field.</div>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="img" id="img" placeholder="Image URL" value="<%=foundProduct.img %>" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter the image URL.</div>
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control" name="price" id="paisa" placeholder="Price" value="<%=foundProduct.price %>" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter the price field.</div>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" name="desc" id="desc" rows="5" placeholder="Product Description" required><%=foundProduct.desc %></textarea>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter the description field.</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      (() => {
        'use strict';

        const forms = document.querySelectorAll('.needs-validation');

        Array.from(forms).forEach(form => {
          form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add('was-validated');
          }, false);
        });
      })();
    </script>
</body>
</html>
