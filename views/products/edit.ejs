<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
</body>
</html>
<div class="row mx-auto" >
    <div class="col-6 mx-auto">
      <form action="/products/<%=foundProduct._id %>?_method=PATCH" method="POST"  class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="naam" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" id="naam" required placeholder="Enter the name" value="<%=foundProduct.name %>">
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter the name field.
            </div>
        </div>
            <div class="mb-3">
              <label for="img" class="form-label">Image: </label>
              <input type="text" class="form-control" name="img" id="img" aria-describedby="emailHelp" placeholder="ImageUrl of the Product" value="<%=foundProduct.img %>" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter the url field.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="paisa" class="form-label">Price </label>
              <input type="number" class="form-control" name="price" id="paisa" aria-describedby="emailHelp" placeholder="Price of the Product" value="<%=foundProduct.price %>" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter the price field.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="desc" class="form-label">Description: </label>
              <textarea name="desc" id="desc" rows="5" placeholder="Description of product" required><%=foundProduct.desc%>"</textarea>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                  Please enter the Description field.
              </div>
            </div>
            <button type="submit" class="btn btn-primary" id="add-product">Edit Product</button>
          </form>
    </div>
</div>

<script>
  (() => {
    'use strict'

    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
</body>
</html>