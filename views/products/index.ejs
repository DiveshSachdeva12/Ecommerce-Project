    }
    100% {
        transform: translateY(0); /* Ends at normal position */
        opacity: 1; /* Fully visible */
    }
}

/* Add animation to the text */
@keyframes fadeInText {
    0% {
        opacity: 0; /* Text is invisible at the start */
        transform: translateY(20px); /* Text starts lower */
