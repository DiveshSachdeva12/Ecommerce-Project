<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>
<%- include('../partials/slider') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
#card {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    gap: 20px;
}

/* Card Style */
.card {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    background-color: #ffffff;
    width: 100%;
    max-width: 18rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

/* Hover Effect for Cards */
.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Image Styling */
.card-img-top {
    width: 100%;
    height: auto;
    border-bottom: 4px solid #0066cc;
    transition: all 0.3s ease;
    padding: 30px;
}

/* Image Hover Effect */
.card-img-top:hover {
    transform: scale(1.05);
}

/* Card Body Styling */
.card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
    text-align: center;
    flex-grow: 1;
    transition: background-color 0.3s ease;
    flex: 1;
}

/* Card Body Hover Effect */
.card-body:hover {
    background-color: #f4f4f4;
}

/* Title and Text Styling */
.card-title {
    margin-bottom: 10px;
    font-size: 1.4rem;
    font-weight: 600;
    color: #333;
    transition: all 0.3s ease;
}

/* Price Styling */
.card-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #0066cc;
    margin-bottom: 10px;
    transition: color 0.3s ease;
    font-family: Arial, Helvetica, sans-serif;
}

.card-price .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2rem;
    margin-right: 10px;
}

.card-price .discounted-price {
    font-size: 1.7rem;
    font-weight: bold;
    color: #0066cc;
}

.card-discount {
    font-size: 1.5rem;
    color: #ff5733;
    font-weight: 600;
    margin-top: 10px;
}

/* Description Text Styling */
.card-text {
    font-size: 1rem;
    color: #555;
    margin-bottom: 20px;
    line-height: 1.4;
}

/* Button Styling */
.btn {
    display: block;
    width: 100%;
    padding: 12px;
    background-color: #2563eb;
    color: white;
    font-weight: 500;
    text-align: center;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.3s ease;
    margin-top: 15px;
    margin-bottom: 10px; /* Add margin between button and text */
}

.btn:hover {
    background-color: #1d4ed8;
    transform: translateY(-3px);
}

/* Delete Button (Only for Sellers) */
#DELETE-product {
    background-color: #e11d48;
    color: white;
    font-weight: 600;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    padding: 12px;
    margin-top: 15px;
    margin-bottom: 10px;
    width: 100%;
}

#DELETE-product:hover {
    background-color: #9f1239;
}

/* Media Queries for Responsiveness */
@media (max-width: 1024px) {
    .col-lg-3 {
        flex: 0 0 48%;
    }
}

@media (max-width: 768px) {
    .col-lg-3 {
        flex: 0 0 100%;
    }

    .card-body {
        padding: 10px;
    }
}


.footer {
    background: linear-gradient(135deg, #112938, #3e6b99);
    color: #f5f5f5;
    padding: 60px 0;
    font-family: Arial, sans-serif;
    text-align: left;
    opacity: 0;
    animation: fadeIn 1.5s ease-in-out forwards;
}

/* Fade-in effect */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Footer Sections */
.footer-sections {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
}

.footer-section {
    flex: 1;
    margin-right: 30px;
}

.footer-section:last-child {
    margin-right: 0;
}

.footer-title {
    font-size: 1.4rem;
    color: #f5f5f5;
    font-weight: bold;
    margin-bottom: 20px;
    opacity: 0;
    animation: fadeInTitle 1s ease-in-out forwards;
}

@keyframes fadeInTitle {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Footer Links */
.footer-links {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.footer-link {
    color: #d1d1d1;
    font-size: 1rem;
    text-decoration: none;
    display: block;
    margin-bottom: 10px;
    opacity: 0;
    animation: fadeInLink 1.5s ease-in-out forwards;
    animation-delay: 0.3s;
}

@keyframes fadeInLink {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.footer-link:hover {
    color: black;
}

/* Footer Subscription */
.footer-subscription {
    text-align: center;
    margin-top: 40px;
}

.footer-subscription-text {
    font-size: 1rem;
    color: #f5f5f5;
    margin-bottom: 20px;
}

.footer-subscription-form {
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.footer-subscription-input {
    padding: 12px;
    font-size: 1rem;
    border-radius: 5px;
    border: 1px solid #444;
    margin-right: 15px;
    width: 250px;
}

.footer-subscription-btn {
    padding: 12px 20px;
    background-color: #1e90ff;
    color: white;
    font-size: 1rem;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.footer-subscription-btn:hover {
    background-color: #1c75b9;
}

/* Footer Bottom */
.footer-bottom {
    text-align: center;
    margin-top: 40px;
    border-top: 1px solid #444;
    padding-top: 20px;
}

.footer-text {
    font-size: 1rem;
    color: #d1d1d1;
    margin: 0;
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
}

/* Responsive Design */
@media (max-width: 768px) {
    .footer-sections {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        margin-top: 20px;
    }

    .footer-subscription-form {
        flex-direction: column;
        align-items: center;
    }

    .footer-subscription-input {
        width: 100%;
        margin-bottom: 10px;
    }

    .footer-subscription-btn {
        width: 100%;
    }
}

    </style>
</head>
<body>
    <div class="container my-5">
        <div class="row g-3" id="card">
            <% for(let item of products) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 d-flex">
                    <div class="card mx-auto">
                        <img src="<%= item.img %>" class="card-img-top" alt="<%= item.name %>">
                        <div class="card-body">
                            <h2 class="card-title"><%= item.name %></h2>
                            <div class="card-price">
                                <span class="original-price">₹<%= item.price %></span>
                                <span class="discounted-price">₹<%= (item.price - item.price * 0.20).toFixed(2) %></span>
                            </div>
                            <p class="card-text"><%= item.desc %></p>
                            <div class="card-discount">20% Off</div>
                            <a href="/products/<%= item._id %>" class="btn">View Product</a>
                            <% if (currentUser && currentUser.role === 'seller') { %>
                                <form action="/products/<%= item._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn" id="DELETE-product">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    

    <footer class="footer">
        <div class="container">
            <!-- Footer Sections for Links -->
            <div class="footer-sections">
                <div class="footer-section">
                    <h3 class="footer-title">Company</h3>
                    <ul class="footer-links">
                        <li><a href="/about" class="footer-link">About Us</a></li>
                        <li><a href="/services" class="footer-link">Services</a></li>
                        <li><a href="/careers" class="footer-link">Careers</a></li>
                        <li><a href="/legal" class="footer-link">Legal</a></li>
                        <li><a href="/privacy" class="footer-link">Privacy Policy</a></li>
                    </ul>
                </div>
    
                <div class="footer-section">
                    <h3 class="footer-title">Customer Service</h3>
                    <ul class="footer-links">
                        <li><a href="/support" class="footer-link">Support</a></li>
                        <li><a href="/faq" class="footer-link">FAQ</a></li>
                        <li><a href="/contact" class="footer-link">Contact Us</a></li>
                        <li><a href="/return-policy" class="footer-link">Return Policy</a></li>
                    </ul>
                </div>
    
                <div class="footer-section">
                    <h3 class="footer-title">Quick Links</h3>
                    <ul class="footer-links">
                        <li><a href="/terms" class="footer-link">Terms & Conditions</a></li>
                        <li><a href="/shipping" class="footer-link">Shipping Information</a></li>
                        <li><a href="/order-tracking" class="footer-link">Order Tracking</a></li>
                        <li><a href="/site-map" class="footer-link">Site Map</a></li>
                    </ul>
                </div>
    
                <div class="footer-section">
                    <h3 class="footer-title">Follow Us</h3>
                    <ul class="footer-links">
                        <li><a href="https://www.facebook.com" class="footer-link">Facebook</a></li>
                        <li><a href="https://www.twitter.com" class="footer-link">Twitter</a></li>
                        <li><a href="https://www.instagram.com" class="footer-link">Instagram</a></li>
                        <li><a href="https://www.linkedin.com" class="footer-link">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
    
            <!-- Footer Bottom (Copyright and Subscription) -->
            <div class="footer-bottom">
                <p class="footer-text">© 2025 Apna Bazar. All rights reserved.</p>
                <div class="footer-subscription">
                    <p class="footer-subscription-text">Stay updated with our latest offers and news!</p>
                    <form class="footer-subscription-form" action="#" method="POST">
                        <input type="email" class="footer-subscription-input" placeholder="Enter your email" required>
                        <button type="submit" class="footer-subscription-btn">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>
    
</body>
</html>
