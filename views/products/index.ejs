    <style>
#card {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}

/* Card Style */
.card {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    background-color: #ffffff;
    width: 100%;
    max-width: 18rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(18, 6, 6, 0.1);
    margin-bottom: 20px;
}

/* Hover Effect for Cards */
.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Image Styling */
.card-img-top {
    width: 100%;
    height: auto;
    border-bottom: 4px solid #0066cc;
    transition: all 0.3s ease;
    padding: 30px;
}

/* Image Hover Effect */
.card-img-top:hover {
    transform: scale(1.05);
}

/* Card Body Styling */
.card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
    text-align: center;
    flex-grow: 1;
    transition: background-color 0.3s ease;
    flex: 1;
}

/* Card Body Hover Effect */
.card-body:hover {
    background-color: #f4f4f4;
}

/* Title and Text Styling */
.card-title {
    margin-bottom: 10px;
    font-size: 1.4rem;
    font-weight: 600;
    color: #333;
    transition: all 0.3s ease;
}

/* Price Styling */
.card-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: black;
    margin-bottom: 10px;
    transition: color 0.3s ease;
    font-family: Arial, Helvetica, sans-serif;
}

.card-price .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 1.2rem;
    margin-right: 10px;
}

.card-price .discounted-price {
    font-size: 1.7rem;
    font-weight: bold;
    color: #001233;
}

.card-discount {
    font-size: 1.5rem;
    color: #ff5733;
    font-weight: 600;
    margin-top: 10px;
}

/* Description Text Styling */
.card-text {
    font-size: 1rem;
    color: #555;
    margin-bottom: 20px;
    line-height: 1.4;
}

/* Button Styling */
/* General Button Styling */
.btn {
    display: block;
    width: 100%;
    padding: 15px 20px;
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
    text-transform: uppercase;
    color: #fff;
    background: linear-gradient(135deg, #4f46e5, #2563eb);
    border: none;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    text-decoration: none;
    cursor: pointer;
}

.btn:hover {
    background: linear-gradient(135deg, #3730a3, #1d4ed8);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    transform: translateY(-5px);
}

/* Delete Button Styling */
#DELETE-product {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 8px;
    padding: 15px 20px;
    text-align: center;
    text-transform: uppercase;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
}

#DELETE-product:hover {
    background: linear-gradient(135deg, #b91c1c, #991b1b);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    transform: translateY(-5px);
}

/* Media Queries for Responsiveness */
@media (max-width: 1024px) {
    .col-lg-3 {
        flex: 0 0 48%;
    }
}

@media (max-width: 768px) {
    .col-lg-3 {
        flex: 0 0 100%;
    }

    .card-body {
        padding: 10px;
    }
}


.footer {
    background: linear-gradient(135deg, #112938, #3e6b99);
    color: #f5f5f5;
    padding: 60px 0;
    font-family: Arial, sans-serif;
    text-align: left;
    opacity: 0;
    animation: fadeIn 1.5s ease-in-out forwards;
}

/* Fade-in effect */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Footer Sections */
.footer-sections {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
}

.footer-section {
    flex: 1;
    margin-right: 30px;
}

.footer-section:last-child {
    margin-right: 0;
}

.footer-title {
