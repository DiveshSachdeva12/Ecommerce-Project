}

@keyframes fadeInTitle {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Footer Links */
.footer-links {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.footer-link {
    color: #d1d1d1;
    font-size: 1rem;
    text-decoration: none;
    display: block;
    margin-bottom: 10px;
    opacity: 0;
    animation: fadeInLink 1.5s ease-in-out forwards;
    animation-delay: 0.3s;
}

@keyframes fadeInLink {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.footer-link:hover {
    color: black;
}

/* Footer Subscription */
.footer-subscription {
    text-align: center;
    margin-top: 40px;
}

.footer-subscription-text {
    font-size: 1rem;
    color: #f5f5f5;
    margin-bottom: 20px;
}

.footer-subscription-form {
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.footer-subscription-input {
    padding: 12px;
    font-size: 1rem;
    border-radius: 5px;
    border: 1px solid #444;
    margin-right: 15px;
    width: 250px;
}

.footer-subscription-btn {
    padding: 12px 20px;
    background-color: #1e90ff;
    color: white;
    font-size: 1rem;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.footer-subscription-btn:hover {
    background-color: #1c75b9;
}

/* Footer Bottom */
.footer-bottom {
    text-align: center;
    margin-top: 40px;
    border-top: 1px solid #444;
    padding-top: 20px;
}

.footer-text {
    font-size: 1rem;
    color: #d1d1d1;
    margin: 0;
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
}

/* Responsive Design */
@media (max-width: 768px) {
    .footer-sections {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        margin-top: 20px;
    }

    .footer-subscription-form {
        flex-direction: column;
        align-items: center;
    }

    .footer-subscription-input {
        width: 100%;
        margin-bottom: 10px;
    }

    .footer-subscription-btn {
        width: 100%;
    }
}
